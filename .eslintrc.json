{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
